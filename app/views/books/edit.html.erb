<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error_box">
    <p class="v_error"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <div class="edit_txt_area">
    <p class="edit_txt_title">Title</p>
    <%= f.text_field :title %>
    <p class="edit_txt_body">Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="edit_submit">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

